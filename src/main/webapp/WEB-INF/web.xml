<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Cars Form Web Application</display-name>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/error-handler</location>
    </error-page>

    <session-config>
        <session-timeout>15</session-timeout>
    </session-config>

    <context-param>
        <param-name>DB_URL</param-name>
        <param-value>jdbc:mysql://localhost/car_db</param-value>
    </context-param>

    <context-param>
        <param-name>DB_USER_NAME</param-name>
        <param-value>root</param-value>
    </context-param>

    <context-param>
        <param-name>DB_USER_PASSWORD</param-name>
        <param-value>root</param-value>
    </context-param>
</web-app>
