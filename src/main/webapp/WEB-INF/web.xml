<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Cars Form Web Application</display-name>
    <servlet>
        <servlet-name>servlet-cars</servlet-name>
        <servlet-class>org.cars.servlets.CarServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>servlet-cars</servlet-name>
        <url-pattern>/cars</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>ValidateFilter</filter-name>
        <filter-class>org.cars.filters.ValidateFilter</filter-class>
    </filter>
    <filter>
        <filter-name>LogFilter</filter-name>
        <filter-class>org.cars.filters.LogFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ValidateFilter</filter-name>
        <url-pattern>/cars</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LogFilter</filter-name>
        <url-pattern>/cars</url-pattern>
    </filter-mapping>

</web-app>
